@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using eCommerce.Models
@{
    ViewData["Title"] = "My Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<MyCartVM>

<section class="h-100 gradient-custom">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Cart -</h5>
                    </div>
                    <div class="card-body">
                        <!-- Single item -->
                        @foreach (var item in Model)
                        {
                            <div class="row">
                                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                    <!-- Image -->
                                    <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                        <img src="@Url.Content(@item.Picture)"
                                             class="w-100" alt="added product" />
                                        <a href="#!">
                                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                        </a>
                                    </div>
                                    <!-- Image -->
                                </div>

                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                    <!-- Data -->
                                    <p><strong>@item.ProductName</strong></p>
                                    <p>Size: @item.Size</p>
                                    @* <form method="post" action="@Url.Action("Delete")">
                                        <input type="hidden" name="id" value="@item.CartId" />
                                        <button type="submit" class="btn btn-danger btn-sm me-1 mb-2" data-mdb-toggle="tooltip" title="Remove item">
                                            <i class="fas fa-trash">Remove</i>
                                        </button>
                                    </form> *@
                                    @* <a class="btn btn-danger btn-sm me-1 mb-2" asp-area="Carts" asp-controller="Home" asp-action="RemoveFromCart" asp-route-id="@item.ProductId">Remove</a> *@
                                    <button>
                                        <a class="btn btn-danger btn-sm me-1 mb-2 border-0" asp-area="Carts" asp-controller="Home" asp-action="Delete" asp-route-id="@item.CartDetailId">
                                            Remove
                                        </a>
                                    </button>
                                    <!-- Data -->
                                    
                                </div>
                                <!-- Estimated Time -->
                                @* <div class="card mb-4">
                                    <div class="card-body">
                                        <p><strong>Expected shipping delivery</strong></p>
                                        <p class="mb-0">@item.CartDate.AddDays(2)</p>
                                    </div>
                                </div> *@

                                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                    <!-- Quantity -->
                                    <div class="d-flex mb-4" style="max-width: 300px">
                                        <div class="form-outline">
                                            <label class="form-label" for="form1">Quantity: @item.Quantity</label>
                                        </div>
                                    </div>
                                    <!-- Quantity -->
                                    <!-- Price -->
                                    <p class="text-start text-md-center">
                                        <strong>Cost: Rs. @item.DiscountedAmount</strong>
                                    </p>
                                    <!-- Price -->
                                </div>
                            </div>
                        }
                        <!-- Single item -->
                        <hr class="my-4" />
                    </div>
                </div>
               @*  @foreach (var item in Model)
                {
                    
                } *@
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body">
                        <p><strong>We accept</strong></p>
                        <img class="me-2" width="45"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg"
                             alt="Visa" />
                        <img class="me-2" width="45"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg"
                             alt="American Express" />
                        <img class="me-2" width="45"
                             src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg"
                             alt="Mastercard" />
                    </div>
                </div>
            </div>
            <!-- Checkout -->
            
                <div class="col-md-4 align-content-xl-center">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h5 class="mb-0">Summary</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                    <div>
                                        <strong>Total amount</strong>
                                        <strong>
                                            <p class="mb-0">(including VAT)</p>
                                        </strong>
                                    </div>
                                    @foreach (var item in Model)
                                {
                                    <span><strong>@item.DiscountedAmount</strong></span>
                                }
                                
                                </li>
                            </ul>

                        <a class="btn btn-primary btn-lg btn-block" asp-area="" asp-controller="Order" asp-action="Index">
                                Go to checkout
                        </a>
                        </div>
                    </div>
                </div>
            
            <form><script src="https://checkout.razorpay.com/v1/payment-button.js" data-payment_button_id="pl_NUTuG8uaVhFKtB" async> </script> </form>
        </div>
    </div>
</section>


